border-bottom-color = ${colors.background}
enable-ipc = true
line-size = 1
wm-restack = bspwm

modules-left =  bspwm line spaces spaces line spaces speeddown spaces speedup
modules-right = pulseaudio spaces backlight spaces battery spaces temperature spaces spaces mem  wlan spaces time spaces powermenu

